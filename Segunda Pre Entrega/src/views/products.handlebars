
<header style="display:flex;justify-content:end;">
    <a href="/api/sessions/logout" role="button">Logout</a>
  </header>
  <p class="welcome">Bienvenido: {{user.first_name}} {{user.last_name}}!</p>
<h1>Productos</h1>
<table id="main">
  <tr>
    <th><b>Title</b></th>
    <th><b>Description</b></th>
    <th><b>Code</b></th>
    <th><b>Price</b></th>
    <th><b>Status</b></th>
    <th><b>Stock</b></th>
    <th><b>Category</b></th>
    <th><b>Agregar al carrito</b></th>
  </tr>
  {{#each payload}}
    <tr>
      <td>{{this.title}}</td>
      <td>{{this.description}}</td>
      <td>{{this.code}}</td>
      <td>{{this.price}}</td>
      <td>{{this.status}}</td>
      <td>{{this.stock}}</td>
      <td>{{this.category}}</td>
      <td><button id="button">Agregar</button></td>
    </tr>
  {{/each}}
</table>

<style>
  .welcome {
    background-color: green;
    border-radius: 20px;
    padding: 10px;
    text-align: center;
    width: 350px;
  }
  .invisible{
    display: none;
  }
</style>
  <script>
    // Selecciona la sección por su clase
    var miSeccion = document.getElementsByClassName('welcome')[0]; 

    // Función para agregar la clase 'invisible' después de 3 segundos
    function ocultarSeccion() {
      miSeccion.classList.add('invisible');
    }

    // Ejecuta la función después de 5 segundos
    setTimeout(ocultarSeccion, 3000);
  </script>


<p>Pagina actual: {{page}}</p>
<a href="{{prevLink}}" role="button" {{#unless hasPrevPage}} disabled {{/unless}}>Anterior</a>
<a href="{{nextLink}}" role="button" {{#unless hasNextPage}} disabled {{/unless}}>Siguiente</a>
