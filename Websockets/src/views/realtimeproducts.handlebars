<div style="background-color:black;color:white">
  <div class="columnas" style="background-color:black;color:white">
    <div class="columna">
      <h2>Agrega un Producto:</h2>
      <form id="realTimeForm" action="/api/products" method="POST">
        <label for="title">Título del Producto:</label>
        <input type="text" id="title" name="title" required>

        <label for="description">Descripción del Producto:</label>
        <textarea id="description" name="description" required></textarea>

        <label for="code">Código del Producto:</label>
        <input type="text" id="code" name="code" required>

        <label for="price">Precio del Producto:</label>
        <input type="number" id="price" name="price" step="0.01" required>

        <label for="status">Estado del Producto:</label>
        <select id="status" name="status" required>
          <option value="disponible">Disponible</option>
          <option value="agotado">Agotado</option>
        </select>

        <label for="stock">Stock del Producto:</label>
        <input type="number" id="stock" name="stock" required>

        <label for="category">Categoría del Producto:</label>
        <input type="text" id="category" name="category" required>

        <input type="submit" value="Enviar">
      </form>
    </div>
    <div class="columna" style="background-color:black;color:white;">
      <h2>Lista de Productos:</h2>
      <ul id="productList"></ul>
    </div>
  </div>
</div>

<script src="/socket.io/socket.io.js"></script>
<script type="module" src="/js/realtimeproducts.js"></script>