<div style="background-color:black;color:white">
  <h2>Lista actual de Productos:</h2>
  {{! <ul id="productList"></ul> }}
  <article>
    <form action="/api/products" method="post" enctype="multipart/form-data">
      <input type="text" name="title" placeholder="title" required />
      <input
        type="text"
        name="description"
        placeholder="description"
        required
      />
      <input type="text" name="code" placeholder="code" required />
      <input type="number" name="price" placeholder="price" required />
      <input type="text" name="status" placeholder="status" required />
      <input type="number" name="stock" placeholder="stock" required />
      <input type="text" name="category" placeholder="category" required />
      <input type="text" name="thumbnail" placeholder="thumbnail" />
      <input type="submit" value="Guardar" />
    </form>
  </article>
  <article>
    <table id="main">
      <tr>
        <th>title</th>
        <th>description</th>
        <th>code</th>
        <th>price</th>
        <th>status</th>
        <th>stock</th>
        <th>category</th>
        <th>thumbnail</th>
      </tr>
      {{#each students}}
        <tr>
          <td>{{this.title}}</td>
          <td>{{this.description}}</td>
          <td>{{this.code}}</td>
          <td>{{this.price}}</td>
          <td>{{this.status}}</td>
          <td>{{this.stock}}</td>
          <td>{{this.category}}</td>
          <td>{{this.thumbnail}}</td>
        </tr>
      {{/each}}
    </table>
  </article>
</div>
{{! <p>Para agregar un producto o ver la lista en tiempo real <a href="http://localhost:8080/realtimeproducts">haga click aqui</a></p> }}

<script src="/socket.io/socket.io.js"></script>
<script type="module" src="/js/home.js"></script>